rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for account subcollections (clients, dumpsters, rentals, etc.)
    // A user can read/write to any document inside an account if their user document
    // says they belong to that account.
    match /accounts/{accountId}/{document=**} {
      allow read, write: if isSignedIn() && getUserData(request.auth.uid).accountId == accountId;
    }

    // Rules for the users collection
    match /users/{userId} {
      // Allow a user to read another user's document if they are in the same account.
      allow read: if isSignedIn() && getUserData(request.auth.uid).accountId == getUserData(userId).accountId;

      // Allow a user to update another user's document ONLY if the requester is an admin of that account.
      allow update: if isSignedIn() && getUserData(request.auth.uid).role == 'admin' && getUserData(request.auth.uid).accountId == getUserData(userId).accountId;
      
      // Client-side creation and deletion is disallowed. This must be done via server actions.
      allow create, delete: if false;
    }
  }
}
