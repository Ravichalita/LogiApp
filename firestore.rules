rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // A user can always read their own user document.
    // They can only be created via the signup server action.
    // They can only be updated by an admin of their account.
    // They can only be deleted by an admin of their account.
    match /users/{userId} {
      allow get: if request.auth.uid == userId;
      allow list: if request.auth.token.accountId == request.query.where.accountId;
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
                      && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountId == resource.data.accountId;
      allow create, delete: if false;
    }

    // Any authenticated user belonging to an account can perform actions
    // within that account's subcollections.
    match /accounts/{accountId}/{document=**} {
      allow read, write: if request.auth.token.accountId == accountId;
    }
  }
}
