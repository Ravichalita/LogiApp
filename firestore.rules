
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to make rules more readable.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isSameAccount(accountId) {
      // The user's accountId is stored as a custom claim on their auth token.
      // This is the fastest and most secure way to check for tenancy.
      return request.auth.token.accountId == accountId;
    }

    function isAdmin() {
      // The user's role is also stored as a custom claim.
      return request.auth.token.role == 'admin';
    }

    // User profiles can be read by themselves, or by anyone in the same account.
    // A user can always update their own profile.
    // Admins can update any user's profile in their account.
    match /users/{userId} {
      allow get: if isOwner(userId) || isSameAccount(get(/databases/$(database)/documents/users/$(userId)).data.accountId);
      allow list: if isSameAccount(request.query.where.accountId);
      allow update: if isOwner(userId) || (isAdmin() && isSameAccount(resource.data.accountId));
      allow create: if true; // Creation is handled by server-side logic (signupAction).
    }
    
    // Any document within an account can only be accessed by users belonging to that account.
    match /accounts/{accountId}/{collection}/{docId} {
      allow read, write: if isSameAccount(accountId);
    }
  }
}
