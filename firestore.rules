rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(accountId) {
      return isSignedIn() && request.auth.token.accountId == accountId;
    }
    
    function isAdmin() {
        return request.auth.token.role == 'admin';
    }

    // User profile documents
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isOwner(resource.data.accountId));
      allow list: if isSignedIn() && isOwner(request.query.filters.accountId);
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isSignedIn() && isAdmin() && isOwner(resource.data.accountId);
    }
    
    // Account documents - only accessible by backend functions for now
    match /accounts/{accountId} {
      allow read, write: if false; 
    }

    // Subcollections within accounts
    match /accounts/{accountId}/{collection}/{docId} {
        allow read, write: if isSignedIn() && isOwner(accountId);
    }
  }
}
