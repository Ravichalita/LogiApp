rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to get user's account data from the users collection
    function getUserAccount(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    // Helper function to check if a user is an admin
    function isAccountAdmin(userId, accountId) {
      let userAccount = getUserAccount(userId);
      return userAccount.accountId == accountId && userAccount.role == 'admin';
    }

    // Protect user data: only users within the same account can read each other's basic info,
    // and only admins can modify other users in their account.
    match /users/{userId} {
       allow read: if request.auth != null && 
                      getUserAccount(request.auth.uid).accountId == resource.data.accountId;
       allow create: if request.auth != null; // Allow new user creation (signup)
       allow update: if request.auth != null && 
                        isAccountAdmin(request.auth.uid, resource.data.accountId);
       allow delete: if request.auth != null &&
                        isAccountAdmin(request.auth.uid, resource.data.accountId);
    }

    // Protect account-specific data (clients, dumpsters, rentals)
    match /accounts/{accountId}/{document=**} {
      allow read, write: if request.auth != null &&
                           getUserAccount(request.auth.uid).accountId == accountId;
    }
  }
}
