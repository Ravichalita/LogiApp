rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAccountMember(accountId) {
      return isSignedIn() && request.auth.token.accountId == accountId;
    }
    
    function isAccountAdmin(accountId) {
      return isAccountMember(accountId) && request.auth.token.role == 'admin';
    }

    // --- User Profile Rules ---
    match /users/{userId} {
      // A user can read their own document.
      allow get: if isSignedIn() && request.auth.uid == userId;
      
      // Users can list team members from their own account.
      // This requires the client query to include: where('accountId', '==', user.accountId)
      allow list: if isAccountMember(request.query.where.accountId);
      
      // A user can update their own name.
      allow update: if isSignedIn() && request.auth.uid == userId
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['name', 'updatedAt']);

      // Only server-side logic can create or delete user documents.
      allow create, delete: if false;
    }

    // --- Account Data Rules ---
    match /accounts/{accountId}/{collection}/{docId} {
      // Allow read/write access if the user is a member of the account.
      // Admin-only actions (like delete) are handled by UI controls,
      // but could be further restricted here if needed (e.g., using isAccountAdmin(accountId)).
      allow read, write: if isAccountMember(accountId);
    }
  }
}
