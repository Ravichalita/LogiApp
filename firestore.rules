rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isUserAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return request.auth.token.role;
    }
    
    function getUserAccountId() {
        return request.auth.token.accountId;
    }

    function isSameAccount(accountId) {
      return getUserAccountId() == accountId;
    }
    
    function isAdmin() {
      return getUserRole() == 'admin';
    }

    // USERS
    // Users can read their own document to get their profile info (like accountId)
    // Admins can update roles of other users in the same account
    match /users/{userId} {
      allow get: if isOwner(userId) || (isAdmin() && get(/databases/$(database)/documents/users/$(userId)).data.accountId == getUserAccountId());
      allow list: if isAdmin() && request.query.where.accountId == getUserAccountId();
      allow create: if isUserAuthenticated(); // Handled by signup server-side logic
      allow update: if isAdmin() && request.resource.data.accountId == getUserAccountId();
      allow delete: if isAdmin() && get(/databases/$(database)/documents/users/$(userId)).data.accountId == getUserAccountId();
    }

    // ACCOUNTS & SUBCOLLECTIONS
    // Users can access data inside an account only if their token's accountId matches.
    match /accounts/{accountId}/{collection}/{docId} {
      allow read, write, delete: if isUserAuthenticated() && isSameAccount(accountId);
    }
  }
}
