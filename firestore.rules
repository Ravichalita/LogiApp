rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSameAccount(accountId) {
      return request.auth.token.accountId == accountId;
    }
    
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || (isSameAccount(resource.data.accountId) && isAdmin());
      allow list: if isSameAccount(request.query.where.accountId);
      allow create: if true; 
      allow update: if isOwner(userId) || (isSameAccount(resource.data.accountId) && isAdmin());
      allow delete: if isSameAccount(resource.data.accountId) && isAdmin();
    }

    match /accounts/{accountId} {
        allow read, write: if isSameAccount(accountId);

        match /{collection}/{docId} {
            allow read, write: if isSameAccount(accountId);
        }
    }
  }
}
