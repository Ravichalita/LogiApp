
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isAuth() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow get: if isOwner(userId) || 
                   (isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountId == resource.data.accountId);
      allow list: if isAuth() && request.query.where.accountId == request.auth.token.accountId;
      allow create: if !isAuth(); // Anyone can create a user doc during signup
      allow update: if isAuth() && 
                      (isOwner(userId) || 
                       (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountId == resource.data.accountId));
      allow delete: if isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for all subcollections within an 'account'
    match /accounts/{accountId}/{documents=**} {
      allow read, write: if isAuth() && request.auth.token.accountId == accountId;
    }
  }
}
