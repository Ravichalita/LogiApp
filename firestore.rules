
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAccountMember(accountId) {
      return request.auth != null && request.auth.token.accountId == accountId;
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAccountMember(resource.data.accountId);
      allow create; // Handled by ensureUserDocument server-side
      allow update, delete: if isAccountMember(resource.data.accountId);
    }

    match /accounts/{accountId} {
      allow read, update, delete: if isAccountMember(accountId);
      allow create;
    }
    
    // Allow read access to rentals via collection group query,
    // ensuring user can only read rentals belonging to their account.
    match /{path=**}/rentals/{rentalId} {
        allow read: if isAccountMember(request.resource.data.accountId);
        allow create, update, delete: if request.auth.token.role == 'admin' && isAccountMember(resource.data.accountId);
    }
    
    match /accounts/{accountId}/{collection}/{documentId} {
      // This rule applies to collections OTHER THAN 'rentals', which is handled by the collection group rule above.
      // It allows any account member to read, but only admins to write.
      allow read: if isAccountMember(accountId);
      allow write: if request.auth.token.role == 'admin' && isAccountMember(accountId);
    }
  }
}
