
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getAccountId() {
    	return request.auth.token.accountId;
    }
    
    function isAdmin() {
    	return request.auth.token.role == 'admin';
    }

    // Accounts can be read by any authenticated user within that account.
    // Only the account owner (first admin) can modify the account details.
    match /accounts/{accountId} {
      allow read: if isAuth() && getAccountId() == accountId;
      allow write: if isAuth() && isOwner(resource.data.ownerId);
    }
    
    // Any authenticated user can read their own user document.
    // Users can only be created by the server (via signup action).
    // Users can update their own document.
    // Admins can update any user document within the same account.
    // Admins can delete users from their account (but not themselves).
    match /users/{userId} {
      allow get: if isAuth() && isOwner(userId);
      allow list: if isAuth() && request.query.where.accountId == getAccountId();
      allow create: if !isAuth(); // Let server action handle this.
      allow update: if isAuth() && (isOwner(userId) || (isAdmin() && getAccountId() == resource.data.accountId));
      allow delete: if isAuth() && isAdmin() && getAccountId() == resource.data.accountId && !isOwner(userId);
    }

    // Any document within an account's subcollection can be accessed
    // by any authenticated user of that same account.
    match /accounts/{accountId}/{collection}/{docId} {
      allow read, write: if isAuth() && getAccountId() == accountId;
    }
  }
}
