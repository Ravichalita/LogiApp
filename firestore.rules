
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function isUserInAccount(accountId) {
      return isAuth() && getUserData(request.auth.uid).accountId == accountId;
    }

    // --- Rules ---
    match /users/{userId} {
      // READ: A user can read their own document. They can read another user's
      // document only if they are in the same account.
      allow get: if isOwner(userId) || (isAuth() && getUserData(request.auth.uid).accountId == getUserData(userId).accountId);

      // LIST: A user can list users only if querying by their own accountId.
      // This prevents listing all users in the system.
      allow list: if isAuth() && request.query.where.accountId == getUserData(request.auth.uid).accountId;
      
      // CREATE: Allow user creation (signup).
      allow create: if true;

      // UPDATE: A user can update their own document. An admin can update any
      // user's document within the same account.
      allow update: if isOwner(userId) || (isAuth() && getUserData(request.auth.uid).role == 'admin' && isUserInAccount(resource.data.accountId));
    }

    match /accounts/{accountId} {
       // Allow account creation by logged-in users (handled in server-side logic)
       allow create: if isAuth();

       // READ/WRITE on the account document itself (e.g., changing account name)
       // can be restricted to owners/admins if needed. For now, allow any user in the account.
       allow read, update, delete: if isUserInAccount(accountId) && getUserData(request.auth.uid).role == 'admin';
    
      // Rules for all subcollections within an account (clients, dumpsters, etc.)
      match /{document=**} {
        allow read, write, delete: if isUserInAccount(accountId);
      }
    }
  }
}
