
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isAuth() {
      return request.auth != null;
    }

    function getUser(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isSignedInUser(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function isMemberOfAccount(accountId) {
      return isAuth() && request.auth.token.accountId == accountId;
    }
    
    function isAdmin() {
      return isAuth() && request.auth.token.role == 'admin';
    }

    // Match statements for collections
    match /users/{userId} {
      allow read: if isAuth() && (isMemberOfAccount(resource.data.accountId) || isSignedInUser(userId));
      allow list: if isAdmin() && request.query.where.accountId == request.auth.token.accountId;
      allow create: if isAuth(); // Allow creation during signup, handled by server-side logic.
      allow update: if isAdmin() && isMemberOfAccount(resource.data.accountId);
      allow delete: if isAdmin() && isMemberOfAccount(resource.data.accountId);
    }
    
    match /accounts/{accountId} {
       allow read, write: if isAdmin() && isMemberOfAccount(accountId);
    }

    match /accounts/{accountId}/{collection}/{docId} {
       allow read: if isMemberOfAccount(accountId);
       allow list: if isMemberOfAccount(accountId) && request.query.where.accountId == request.auth.token.accountId;
       allow write: if isAdmin() && isMemberOfAccount(accountId);
    }
  }
}
