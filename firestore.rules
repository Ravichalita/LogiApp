rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isUserInAccount(accountId) {
      return request.auth.token.accountId == accountId;
    }
    
    // Users can read their own user document.
    // Listing users is allowed if querying for users within the same account.
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isUserInAccount(request.query.where.accountId);
      allow update: if isOwner(userId);
    }
    
    // Accounts can only be accessed by users belonging to that account.
    match /accounts/{accountId} {
      allow get: if isUserInAccount(accountId);
      
      // All subcollections can be accessed if the user belongs to the account.
      match /{collection}/{docId} {
        allow read, write: if isUserInAccount(accountId);
      }
    }
  }
}
