
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAccountMember(accountId) {
      return request.auth != null && request.auth.token.accountId == accountId;
    }

    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // Admins can read other users' data within the same account
      allow get: if request.auth != null && request.auth.token.role == 'admin' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountId == resource.data.accountId;
    }

    match /accounts/{accountId} {
       allow create: if request.auth != null && request.auth.uid == accountId;
       allow read, update, delete: if isAccountMember(accountId) && request.auth.token.role == 'admin';
    }
    
    match /accounts/{accountId}/{collection}/{documentId} {
      // Any authenticated member of the account can read data
      allow read: if isAccountMember(accountId);
      
      // Allow list for users to see rentals assigned to them
      allow list: if collection == 'rentals' && request.auth.uid == request.query.assignedTo;

      // Only admins can write data by default
      allow write: if isAccountMember(accountId) && request.auth.token.role == 'admin';
    }
  }
}
