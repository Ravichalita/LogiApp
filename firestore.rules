rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is a super admin based on their email claim.
    function isSuperAdmin() {
      return request.auth.token.email == 'contato@econtrol.com.br';
    }

    // Helper function to check if the user is a member of the specific account.
    function isAccountMember(accountId) {
      return request.auth.token.accountId == accountId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow read/write access if the user is the owner of the document or is a super admin.
      allow read, write: if request.auth.uid == userId || isSuperAdmin();
    }

    // Rules for the 'accounts' collection and all its subcollections
    match /accounts/{accountId}/{document=**} {
      // Allow read/write access if the user is a member of the account or is a super admin.
      allow read, write: if isAccountMember(accountId) || isSuperAdmin();
    }

    // Rules for the 'backups' collection.
    // Backups contain sensitive data from all accounts.
    match /backups/{backupId}/{document=**} {
      // Only the super admin can read or write to the backups collection.
      allow read, write: if isSuperAdmin();
    }
  }
}
