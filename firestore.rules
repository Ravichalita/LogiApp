rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAccountMember(accountId) {
      return isSignedIn() && request.auth.token.accountId == accountId;
    }

    function isAdmin() {
        return request.auth.token.role == 'admin';
    }

    // Rules for Accounts
    match /accounts/{accountId} {
      allow read: if isAccountMember(accountId);
      allow write: if isAccountMember(accountId) && isAdmin();
    }

    // Rules for Users
    match /users/{userId} {
      allow get: if isAccountMember(resource.data.accountId);
      allow list: if request.query.where.get("accountId")[2] == request.auth.token.accountId && isAdmin();
      allow create: if isSignedIn(); // Allow creation during signup
      allow update: if request.auth.uid == userId || (isAccountMember(resource.data.accountId) && isAdmin());
      allow delete: if isAccountMember(resource.data.accountId) && isAdmin();
    }

    // Rules for App Data (Clients, Dumpsters, Rentals)
    match /accounts/{accountId}/{collection}/{docId} {
      allow read, get: if isAccountMember(accountId);
      allow list: if request.query.where.get("accountId")[2] == accountId && isAccountMember(accountId);
      allow write: if isAccountMember(accountId) && isAdmin();
    }
    
     match /accounts/{accountId}/completed_rentals/{rentalId} {
        allow read, get: if isAccountMember(accountId);
        allow list: if request.query.where.get("accountId")[2] == accountId && isAccountMember(accountId);
        allow create, update, delete: if isAccountMember(accountId) && isAdmin();
    }
  }
}
