rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }
    
    function isAccountMember(accountId) {
      return request.auth.token.accountId == accountId;
    }

    match /accounts/{accountId} {
      allow read: if isAccountMember(accountId);
      allow write: if isAdmin() && isAccountMember(accountId);

      // Sub-collections that belong to an account
      match /{collection}/{docId} {
        allow read, write: if isAccountMember(accountId);
      }
      
      // Specifically for completed_rentals list
      match /completed_rentals/{rentalId} {
         allow list: if isAccountMember(accountId);
      }
    }

    match /users/{userId} {
      allow get: if request.auth.token.accountId == resource.data.accountId;
      allow create;
      allow update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }
  }
}
