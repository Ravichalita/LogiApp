rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    // Accounts can only be read by their members. Creation is handled server-side.
    match /accounts/{accountId} {
      allow read: if request.auth.token.accountId == accountId;
      allow write: if false; // All writes are managed by server-side actions
    }

    // Subcollections can only be accessed by members of the parent account.
    // Writes are restricted to admins.
    match /accounts/{accountId}/{collection}/{docId} {
      allow get: if request.auth.token.accountId == accountId;
      allow list: if request.auth.token.accountId == accountId && request.query.where.accountId == accountId;
      allow write: if isAdmin() && request.auth.token.accountId == accountId;
    }

    // Rules for the root 'users' collection
    match /users/{userId} {
      // Allow admins to list all users within their own account
      allow list: if isAdmin() && request.query.filters.size() == 1 && request.query.filters.accountId == request.auth.token.accountId;

      // Allow a user to read their own document,
      // OR an admin to read any user's document in the same account
      allow get: if request.auth.uid == userId || (isAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountId == resource.data.accountId);
      
      // Allow admins to update users in their account (e.g., change role)
      // Only admins of the target user's account can update them.
      allow update: if isAdmin() && request.auth.token.accountId == resource.data.accountId;

      // Disallow direct creation/deletion from client. This is handled by secure backend actions.
      allow create, delete: if false; 
    }
  }
}
