
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(accId) {
      return request.auth.token.accountId == accId;
    }

    match /accounts/{accountId} {
      allow read, write: if isOwner(accountId);
    }
    
    match /users/{userId} {
      allow get: if request.auth.uid == userId;
      allow list: if request.auth.token.accountId == resource.data.accountId;
      allow update: if request.auth.uid == userId;
    }

    match /{collection}/{docId} {
      allow read, write, delete: if isOwner(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountId);
    }
  }
}
