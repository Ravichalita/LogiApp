rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(accountId) {
      return get(/databases/$(database)/documents/accounts/$(accountId)).data.ownerId == request.auth.uid;
    }

    function isUserInAccount(accountId) {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountId == accountId;
    }

    function isAccountAdmin(accountId) {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return isUserInAccount(accountId) && userRole == 'admin';
    }
    
    match /accounts/{accountId} {
      allow read: if isUserInAccount(accountId);
      allow create: if request.auth.uid == request.resource.data.ownerId;
    }

    match /accounts/{accountId}/{document=**} {
      allow read, write: if isUserInAccount(accountId);
    }

    match /users/{userId} {
      allow get: if isUserInAccount(get(/databases/$(database)/documents/users/$(userId)).data.accountId);
      allow list: if isAccountAdmin(request.query.accountId);
      allow create: if request.auth.uid == userId; // Allow user to create their own document during signup.
      allow update: if request.auth.uid == userId || isAccountAdmin(get(/databases/$(database)/documents/users/$(userId)).data.accountId);
      allow delete: if isAccountAdmin(get(/databases/$(database)/documents/users/$(userId)).data.accountId);
    }
  }
}
