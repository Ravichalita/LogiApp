rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isAccountOwner(accountId) {
      return isUserAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountId == accountId;
    }
    
    function isUserAdmin(accountId) {
        return isAccountOwner(accountId) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow users to read their own user document.
    match /users/{userId} {
      allow read, update: if isUserAuthenticated() && request.auth.uid == userId;
    }

    // Rules for multi-tenant data within accounts
    match /accounts/{accountId} {
        // Only allow reading/writing to an account if the user belongs to that account.
        allow read, write: if isAccountOwner(accountId);

        // Allow admins of an account to list users in that account
        match /users/{userId} {
             allow read, list: if isAccountOwner(accountId);
             allow update: if isUserAdmin(accountId);
        }

        // Apply the same account ownership rule to all subcollections.
        match /{document=**} {
             allow read, write: if isAccountOwner(accountId);
        }
    }
  }
}
