
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isSameAccount(accountId) {
      return isSignedIn() && request.auth.token.accountId == accountId;
    }

    function isAdmin(accountId) {
      return isSameAccount(accountId) && request.auth.token.role == 'admin';
    }

    // --- User Profiles ---
    // Users can read their own document.
    // Admins can list users within their own account.
    // Users can be created via the signup server action.
    // Admins can update roles or delete users in their account.
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isAdmin(request.query.where.accountId);
      allow create: if isSignedIn(); // Further secured by server-side logic in actions.ts
      allow update, delete: if isAdmin(resource.data.accountId);
    }
    
    // --- Account Data ---
    // Any document inside an account's subcollection can only be accessed 
    // by a user belonging to that same account.
    match /accounts/{accountId}/{collection}/{docId} {
        allow read, write: if isSameAccount(accountId);
    }
    
    // --- Top-level 'accounts' collection (for metadata) ---
    // Only allow reads for admins of that account to get account metadata.
    // Creation is handled by the server-side action.
    match /accounts/{accountId} {
      allow get: if isAdmin(accountId);
      allow create: if isSignedIn(); // Server-side logic handles this
      allow update: if isAdmin(accountId);
    }
  }
}
