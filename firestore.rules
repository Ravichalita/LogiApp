rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAccountMember(accountId) {
      return request.auth != null && request.auth.token.accountId == accountId;
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAccountMember(resource.data.accountId);
      allow create; // Anyone can create a user doc (signup)
      allow update: if request.auth.uid == userId || (isAccountMember(resource.data.accountId) && request.auth.token.role == 'admin');
      allow delete: if isAccountMember(resource.data.accountId) && request.auth.token.role == 'admin';
    }

    match /accounts/{accountId} {
       allow read: if isAccountMember(accountId);
       allow create: if request.auth.uid == accountId; // User creates their own account
       allow update: if isAccountMember(accountId) && request.auth.token.role == 'admin';
    }
    
    match /accounts/{accountId}/{collection}/{documentId} {
        // Default rule for most collections
        allow read, write: if isAccountMember(accountId) && request.auth.token.role == 'admin';
    }
    
    match /accounts/{accountId}/clients/{clientId} {
         allow read, write: if isAccountMember(accountId);
    }
    
     match /accounts/{accountId}/dumpsters/{dumpsterId} {
         allow read, write: if isAccountMember(accountId);
    }
    
    match /accounts/{accountId}/rentals/{rentalId} {
        allow get: if isAccountMember(accountId);
        allow create, update, delete: if isAccountMember(accountId);
        
        // Let any account member list rentals, the application query will filter them.
        allow list: if isAccountMember(accountId);
    }

    match /accounts/{accountId}/completed_rentals/{rentalId} {
        allow read, write: if isAccountMember(accountId) && request.auth.token.role == 'admin';
        allow list: if isAccountMember(accountId) && request.auth.token.role == 'admin';
    }
  }
}
