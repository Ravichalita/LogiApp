rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function isUserInAccount(accountId) {
        return isAuth() && getUserData(request.auth.uid).accountId == accountId;
    }
    
    function isUserRole(role) {
        return isAuth() && getUserData(request.auth.uid).role == role;
    }
    
    // User collection rules
    match /users/{userId} {
      allow create; // Allow user creation via signup action
      allow get: if isAuth() && (request.auth.uid == userId || getUserData(request.auth.uid).accountId == resource.data.accountId);
      allow list: if isAuth() && request.query.where.accountId == getUserData(request.auth.uid).accountId;
      allow update: if isAuth() && (
                    (request.auth.uid == userId) || 
                    (isUserRole('admin') && getUserData(request.auth.uid).accountId == resource.data.accountId)
                  );
      allow delete: if isAuth() && isUserRole('admin') && getUserData(request.auth.uid).accountId == getUserData(userId).accountId;
    }

    // Account-specific data rules
    match /accounts/{accountId}/{collection}/{docId} {
      allow read, write, delete: if isUserInAccount(accountId);
    }
  }
}
