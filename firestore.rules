
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isSameAccount(accountId) {
      return request.auth.token.accountId == accountId;
    }

    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    // USERS collection
    // Users can read their own document to get their profile info (including accountId).
    // Admins of the same account can update other users' roles/status.
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isSameAccount(get(/databases/$(database)/documents/users/$(userId)).data.accountId) && isAdmin();
      allow list: if isSignedIn() && request.query.where.accountId == request.auth.token.accountId;
      // Deny create/delete by default. Handled by server-side actions.
      allow create, delete: if false;
    }

    // ACCOUNTS collection and subcollections
    // Users can only access data within their own account, verified by the custom token.
    match /accounts/{accountId} {
      allow read, write: if isSignedIn() && isSameAccount(accountId);

      // Subcollections also inherit this rule.
      match /{collection}/{docId} {
         allow read, write: if isSignedIn() && isSameAccount(accountId);
      }
    }
  }
}
