
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return request.auth.token.email == 'contato@econtrol.com.br';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getAccountId() {
      return request.auth.token.accountId;
    }

    function userAccountData() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isMemberOfAccount(accountId) {
      return get(/databases/$(database)/documents/accounts/$(accountId)).data.members.hasAny([request.auth.uid]);
    }
    
    function isMemberOfSameAccount(userId) {
        let userAccountId = get(/databases/$(database)/documents/users/$(userId)).data.accountId;
        return getAccountId() == userAccountId;
    }

    function isAdmin() {
      return request.auth.token.role == 'admin' || request.auth.token.role == 'owner';
    }

    // Accounts collection
    match /accounts/{accountId} {
      allow read: if isMemberOfAccount(accountId) || isSuperAdmin();
      allow create: if request.auth.uid == accountId || isSuperAdmin();
      allow update: if isAdmin() && isMemberOfAccount(accountId) || isSuperAdmin();
      
      // Subcollections
      match /{collection}/{docId} {
        allow read, write: if isMemberOfAccount(accountId) || isSuperAdmin();
      }
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || (isMemberOfAccount(userAccountData().accountId) && isSuperAdmin());
      allow create: if request.auth.uid == userId || isSuperAdmin();
      allow update: if isOwner(userId) || (isAdmin() && isMemberOfSameAccount(userId)) || isSuperAdmin();
      allow delete: if isOwner(userId) || isSuperAdmin();
    }
    
     // Backups collection (Only Super Admin can access)
    match /backups/{backupId} {
        allow read, write, delete: if isSuperAdmin();
        
        match /{path=**} {
            allow read, write, delete: if isSuperAdmin();
        }
    }
  }
}
