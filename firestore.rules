rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to get the requesting user's account data from the /users collection
    function getUserAccount(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // A user can always read their own user document
    match /users/{userId} {
      allow get: if isSignedIn() && request.auth.uid == userId;
      allow list: if isSignedIn() && request.query.where.get("accountId") == getUserAccount(request.auth.uid).accountId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      // Creation/deletion should be handled by server-side logic (actions)
      allow create, delete: if false;
    }

    // All other collections are nested under an account
    match /accounts/{accountId} {
       // A user can only access documents if their accountId matches the document's accountId
       function isRequestingOwnAccountData() {
         return isSignedIn() && getUserAccount(request.auth.uid).accountId == accountId;
       }

        match /{collection}/{docId} {
            // Allow read/write operations if the user belongs to the account
            allow read, write: if isRequestingOwnAccountData();
        }
    }
  }
}
