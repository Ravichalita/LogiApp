rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAccountMember(accountId) {
      return request.auth != null && request.auth.token.accountId == accountId;
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    match /accounts/{accountId} {
      allow read: if isAccountMember(accountId);
      allow create: if request.auth.uid == accountId; 
      allow update: if isAdmin() && isAccountMember(accountId);
    }
    
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || (isAdmin() && isAccountMember(resource.data.accountId));
      allow delete: if isAdmin() && isAccountMember(resource.data.accountId);
    }

    match /accounts/{accountId}/rentals/{rentalId} {
        allow get: if isAccountMember(accountId);
        allow list: if isAdmin() && isAccountMember(accountId) || (isAccountMember(accountId) && request.query.where.assignedTo == request.auth.uid);
        allow write: if isAdmin() && isAccountMember(accountId);
    }
    
    match /accounts/{accountId}/{collection}/{documentId} {
      allow read: if isAccountMember(accountId);
      allow write: if isAdmin() && isAccountMember(accountId);
    }
  }
}
