rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // A user can always read their own user document.
    // This is the key to allowing the app to load the user's profile and accountId.
    match /users/{userId} {
      allow get: if request.auth.uid == userId;
       // Users can only be created during signup, linked to their auth UID.
      allow create: if request.auth.uid == userId;
      // Allow an admin to update a user's role within the same account.
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountId == resource.data.accountId;
      // You can only list users that belong to your own account.
      allow list: if request.auth.token.accountId == request.query.where.accountId;
    }

    // For any document within an account, allow read/write
    // if the user's accountId (from their user doc) matches the accountId in the path.
    match /accounts/{accountId}/{collection}/{docId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountId == accountId;
    }
  }
}
