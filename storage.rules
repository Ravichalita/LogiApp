rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra geral: nega o acesso por padr√£o
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Permite acesso aos anexos de uma conta apenas para membros daquela conta
    match /accounts/{accountId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.accountId == accountId;
    }
  }
}
