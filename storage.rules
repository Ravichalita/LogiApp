rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra geral: apenas usu치rios autenticados podem acessar
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Isola os dados por conta.
    // Usu치rios s칩 podem acessar arquivos dentro da pasta de sua pr칩pria conta.
    match /accounts/{accountId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.accountId == accountId;
    }
  }
}
