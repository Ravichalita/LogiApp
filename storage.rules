rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Proíbe o acesso a todos os arquivos por padrão.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Permite que um usuário autenticado leia e escreva arquivos
    // SOMENTE dentro do diretório da sua própria conta.
    match /accounts/{accountId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.accountId == accountId;
    }
  }
}
