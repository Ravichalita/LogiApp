rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que usu√°rios autenticados leiam e escrevam arquivos
    // apenas dentro da pasta correspondente ao seu accountId.
    match /accounts/{accountId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountId == accountId;
    }
  }
}
