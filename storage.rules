
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isSignedIn() {
      return request.auth != null && request.auth.token.accountId != null;
    }

    // Rule for active rentals
    match /accounts/{accountId}/rentals/{rentalId}/{fileName} {
      allow read, write: if isSignedIn() && request.auth.token.accountId == accountId;
    }

    // Rule for completed rentals
    match /accounts/{accountId}/completed_rentals/{rentalId}/{fileName} {
      allow read, write: if isSignedIn() && request.auth.token.accountId == accountId;
    }
  }
}
