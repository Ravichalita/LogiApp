rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null && request.auth.token.accountId != null;
    }

    // Permite uploads para /rentals
    match /accounts/{accountId}/rentals/{rentalId}/{fileName=**} {
      function rentalExistsAndBelongs() {
        return exists(/databases/(default)/documents/accounts/$(accountId)/rentals/$(rentalId));
      }
      allow read, write: if isSignedIn()
                   && request.auth.token.accountId == accountId
                   && rentalExistsAndBelongs();
    }

    // Permite uploads para /completed_rentals
    match /accounts/{accountId}/completed_rentals/{rentalId}/{fileName=**} {
      function completedRentalExistsAndBelongs() {
        return exists(/databases/(default)/documents/accounts/$(accountId)/completed_rentals/$(rentalId));
      }
      allow read, write: if isSignedIn()
                   && request.auth.token.accountId == accountId
                   && completedRentalExistsAndBelongs();
    }

    // Nega todos os outros acessos por padr√£o
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
